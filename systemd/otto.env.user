# Otto BGP v0.3.2 User Environment Configuration
# For user installations (--user mode)
# Location: ~/.config/otto-bgp/otto.env

# Installation Configuration
OTTO_BGP_ENVIRONMENT=user
OTTO_BGP_INSTALLATION_MODE=user
OTTO_BGP_SERVICE_USER=USERNAME_PLACEHOLDER
OTTO_BGP_SYSTEMD_ENABLED=false
OTTO_BGP_OPTIMIZATION_LEVEL=basic

# Directory Paths (User Layout)
OTTO_BGP_DATA_DIR=/home/USERNAME_PLACEHOLDER/.local/share/otto-bgp
OTTO_BGP_CONFIG_DIR=/home/USERNAME_PLACEHOLDER/.config/otto-bgp
OTTO_BGP_LOG_DIR=/home/USERNAME_PLACEHOLDER/.local/share/otto-bgp/logs
OTTO_BGP_OUTPUT_DIR=/home/USERNAME_PLACEHOLDER/.local/share/otto-bgp/output
OTTO_BGP_CACHE_DIR=/home/USERNAME_PLACEHOLDER/.local/share/otto-bgp/cache

# SSH Security Configuration
SSH_USERNAME=USERNAME_PLACEHOLDER
OTTO_BGP_SSH_KNOWN_HOSTS=/home/USERNAME_PLACEHOLDER/.local/share/otto-bgp/ssh-keys/known_hosts
OTTO_BGP_SSH_PRIVATE_KEY=/home/USERNAME_PLACEHOLDER/.local/share/otto-bgp/ssh-keys/otto-bgp
OTTO_BGP_SSH_CONNECTION_TIMEOUT=30
OTTO_BGP_SSH_COMMAND_TIMEOUT=60
OTTO_BGP_SSH_RETRY_ATTEMPTS=3
OTTO_BGP_SSH_RETRY_DELAY=5

# BGPq4 Configuration
OTTO_BGP_BGPQ4_MODE=auto
OTTO_BGP_BGPQ4_TIMEOUT=45
OTTO_BGP_BGPQ4_RETRY_ATTEMPTS=2
OTTO_BGP_BGPQ4_SOURCES=RIPE,RADB,ARIN,APNIC,LACNIC,AFRINIC

# Logging Configuration
OTTO_BGP_LOG_LEVEL=INFO
OTTO_BGP_LOG_FILE=/home/USERNAME_PLACEHOLDER/.local/share/otto-bgp/logs/otto-bgp.log
OTTO_BGP_LOG_ROTATE_SIZE=10M
OTTO_BGP_LOG_RETENTION_DAYS=7

# RPKI Validation Configuration
OTTO_BGP_RPKI_ENABLED=true
OTTO_BGP_RPKI_VALIDATOR_URL=https://rpki-validator.ripe.net/api/v1/validity
OTTO_BGP_RPKI_CACHE_TTL=3600
OTTO_BGP_RPKI_MAX_AGE=86400

# Network Configuration
OTTO_BGP_IRR_SERVERS=whois.radb.net,whois.ripe.net

# Autonomous Mode Configuration (Disabled for User Mode)
OTTO_BGP_AUTONOMOUS_ENABLED=false
OTTO_BGP_AUTO_APPLY_ENABLED=false
OTTO_BGP_DRY_RUN_MODE=true

# Resource Limits (User Mode)
OTTO_BGP_MAX_CONCURRENT_DEVICES=3
OTTO_BGP_MAX_PROCESSING_TIME=600
OTTO_BGP_MEMORY_LIMIT=536870912
OTTO_BGP_TEMP_FILE_CLEANUP=true

# Development and Testing
OTTO_BGP_DEBUG_MODE=false
OTTO_BGP_SETUP_MODE=false
OTTO_BGP_TEST_MODE=false
OTTO_BGP_VERBOSE_LOGGING=false

# Security Configuration
OTTO_BGP_STRICT_HOST_KEY_CHECKING=true
OTTO_BGP_VALIDATE_CERTIFICATES=true
OTTO_BGP_SECURE_TEMP_FILES=true
OTTO_BGP_ENABLE_AUDIT_LOGGING=false

# Performance Tuning (User Mode)
OTTO_BGP_PARALLEL_PROCESSING=true
OTTO_BGP_CACHE_ENABLED=true
OTTO_BGP_COMPRESSION_ENABLED=false
OTTO_BGP_CONNECTION_POOLING=false

# File Permissions
OTTO_BGP_FILE_UMASK=0077
OTTO_BGP_LOG_PERMISSIONS=0640
OTTO_BGP_CONFIG_PERMISSIONS=0600
OTTO_BGP_OUTPUT_PERMISSIONS=0644

# Optional: Autonomous Mode Settings (commented out for user mode)
# OTTO_BGP_AUTO_APPLY_THRESHOLD=100
# OTTO_BGP_REQUIRE_CONFIRMATION=true
