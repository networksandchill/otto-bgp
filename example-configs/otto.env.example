# Otto BGP v0.3.2 Environment Configuration Example
# Copy this file to your configuration directory and customize

# Installation Configuration
OTTO_BGP_ENVIRONMENT=user
OTTO_BGP_INSTALLATION_MODE=user
OTTO_BGP_SERVICE_USER=username
OTTO_BGP_SYSTEMD_ENABLED=false
OTTO_BGP_OPTIMIZATION_LEVEL=basic

# Directory Paths
OTTO_BGP_DATA_DIR=/home/username/.local/share/otto-bgp
OTTO_BGP_CONFIG_DIR=/home/username/.config/otto-bgp
OTTO_BGP_LOG_DIR=/home/username/.local/share/otto-bgp/logs

# SSH Security Configuration
SSH_USERNAME=username
SSH_KEY_PATH=/home/username/.local/share/otto-bgp/ssh-keys/otto-bgp
# SSH_PASSWORD=secret123  # Uncomment and set if using password auth (NOT recommended)
OTTO_BGP_SSH_KNOWN_HOSTS=/home/username/.local/share/otto-bgp/ssh-keys/known_hosts
OTTO_BGP_SSH_CONNECTION_TIMEOUT=30

# BGPq4 Configuration
OTTO_BGP_BGPQ4_MODE=auto
OTTO_BGP_BGPQ4_TIMEOUT=45

# Logging Configuration
OTTO_BGP_LOG_LEVEL=INFO
OTTO_BGP_LOG_FILE=/home/username/.local/share/otto-bgp/logs/otto-bgp.log

# Autonomous Mode Configuration
OTTO_BGP_AUTONOMOUS_ENABLED=false

# Optional: Autonomous Mode Settings (only if enabled)
# OTTO_BGP_AUTO_APPLY_THRESHOLD=100
# OTTO_BGP_REQUIRE_CONFIRMATION=true
# OTTO_BGP_MAX_SESSION_LOSS_PERCENT=5.0
# OTTO_BGP_MAX_ROUTE_LOSS_PERCENT=10.0
# OTTO_BGP_MONITORING_DURATION_SECONDS=300

# Optional: Email Configuration (for autonomous mode)
# OTTO_BGP_EMAIL_ENABLED=true
# OTTO_BGP_SMTP_SERVER=smtp.company.com
# OTTO_BGP_SMTP_PORT=587
# OTTO_BGP_SMTP_USE_TLS=true
# OTTO_BGP_EMAIL_FROM=otto-bgp@company.com
# OTTO_BGP_EMAIL_TO=network-team@company.com,ops@company.com
# OTTO_BGP_EMAIL_SUBJECT_PREFIX=[Otto BGP Autonomous]
# OTTO_BGP_EMAIL_SEND_ON_SUCCESS=true
# OTTO_BGP_EMAIL_SEND_ON_FAILURE=true
# OTTO_BGP_ALERT_ON_MANUAL=true
# OTTO_BGP_SUCCESS_NOTIFICATIONS=true